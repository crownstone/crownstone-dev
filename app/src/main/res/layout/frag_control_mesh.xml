		<!-- *************** -->
		<!-- Mesh keep alive -->
		<!-- *************** -->
		<TextView
			android:id="@+id/textMeshKeepAlive"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="0dp"
			android:text="KeepAlive"
			android:textAlignment="center"/>
		<LinearLayout
			android:id="@+id/layMeshKeepAliveTimeout"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<EditText
				android:id="@+id/txtMeshKeepAliveTimeout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="2"
				android:ems="10"
				android:inputType="number"
				android:text="timeout"/>
			<Button
				android:id="@+id/btnMeshKeepAliveTimeoutSet"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="set"
				/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/layMeshKeepAliveItem"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<EditText
				android:id="@+id/txtMeshKeepAliveId"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="id"/>
			<EditText
				android:id="@+id/txtMeshKeepAliveAction"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="action"/>
			<Button
				android:id="@+id/btnMeshKeepAliveAddItem"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="add item"
				/>
		</LinearLayout>
		<EditText
			android:id="@+id/txtMeshKeepAliveArray"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="0dp"
			android:ems="10"
			android:inputType="textMultiLine"
			android:text=""
			/>
		<LinearLayout
			android:id="@+id/layMeshKeepAlive"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<Button
				android:id="@+id/btnMeshKeepAliveClear"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="clear"
				/>
			<Button
				android:id="@+id/btnMeshKeepAliveSend"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="send"
				/>
		</LinearLayout>

		<!-- ***************** -->
		<!-- Mesh multi switch -->
		<!-- ***************** -->
		<TextView
			android:id="@+id/textMeshMultiSwitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="0dp"
			android:text="multi switch"/>
		<LinearLayout
			android:id="@+id/layMeshMultiSwitchItem"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<EditText
				android:id="@+id/txtMeshMultiSwitchId"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="id"/>
			<EditText
				android:id="@+id/txtMeshMultiSwitchSwitchState"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="switch"/>
			<EditText
				android:id="@+id/txtMeshMultiSwitchTimeout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="timeout"/>
			<EditText
				android:id="@+id/txtMeshMultiSwitchIntent"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="number"
				android:text="intent"/>
			<Button
				android:id="@+id/btnMeshMultiSwitchAddItem"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="add item"
				/>
		</LinearLayout>
		<EditText
			android:id="@+id/txtMeshMultiSwitchArray"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:layout_marginBottom="0dp"
			android:ems="10"
			android:inputType="text"
			android:text=""
			/>
		<LinearLayout
			android:id="@+id/layMeshMultiSwitch"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<Button
				android:id="@+id/btnMeshMultiSwitchClear"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="clear"
				/>
			<Button
				android:id="@+id/btnMeshMultiSwitchSend"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="send"
				/>
		</LinearLayout>

		<!-- ******************** -->
		<!-- Mesh command control -->
		<!-- ******************** -->
		<TextView
			android:id="@+id/textCommandControl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="63dp"
			android:text="control command"/>
		<LinearLayout
			android:id="@+id/layMeshCommandControlIds"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

			<EditText
				android:id="@+id/txtMeshCommandControlId"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="3"
				android:ems="10"
				android:inputType="number"
				android:text="id"/>
			<Button
				android:id="@+id/btnMeshCommandControlAddId"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="add"
				/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/layMeshCommandControlPayload"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

			<EditText
				android:id="@+id/txtMeshCommandControl"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:layout_weight="3"
				android:ems="10"
				android:inputType="text"
				android:text="0 0 1 0 100"
				/>
			<Button
				android:id="@+id/btnMeshCommandControlSet"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="set"
				/>
		</LinearLayout>
		<EditText
			android:id="@+id/txtMeshCommandControlArray"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:layout_marginBottom="0dp"
			android:ems="10"
			android:inputType="text"
			android:text=""
			/>
		<LinearLayout
			android:id="@+id/layMeshCommandControl"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<Button
				android:id="@+id/btnMeshCommandControlClear"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="clear"
				/>
			<Button
				android:id="@+id/btnMeshCommandControlSend"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="send"
				/>
		</LinearLayout>

	</LinearLayout>
	</ScrollView>




</RelativeLayout>